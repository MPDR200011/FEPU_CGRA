class MyUnitCube extends CGFobject {
    constructor(scene) {
	super(scene);
    }

    initBuffers() {
	this.vertices = [
	    0.5,0.5,0.5,   //0
	    -0.5,0.5,0.5,  //1
	    0.5,-0.5,0.5,  //2
	    -0.5,-0.5,0.5, //3
	    0.5,0.5,-0.5,  //4
	    0.5,-0.5,-0.5, //5
	    -0.5,0.5,-0.5, //6
	    -0.5,-0.5,-0.5,//7
	];

	this.indices = [
	    0,1,6,
	    0,6,4
	];

	this.primitiveType = this.scene.gl.TRIANGLES;
	this.initGLBuffers();
    }
}
